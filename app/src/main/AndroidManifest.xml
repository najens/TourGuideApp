<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.londontourguide">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <!-- The main/home activity (it has no parent activity) -->
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- A child of the main activity -->
        <activity
            android:name=".SitesActivity"
            android:label="Sites">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.londontourguide.MainActivity" />
        </activity>
        <!-- A child of the main activity -->
        <activity
            android:name=".RestaurantsActivity"
            android:label="Restaurants">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.londontourguide.MainActivity" />
        </activity>
        <!-- A child of the main activity -->
        <activity
            android:name=".RecreationActivity"
            android:label="Recreation">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.londontourguide.MainActivity" />
        </activity>
        <!-- A child of the main activity -->
        <activity
            android:name=".EntertainmentActivity"
            android:label="Entertainment">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.londontourguide.MainActivity" />
        </activity>
    </application>

</manifest>